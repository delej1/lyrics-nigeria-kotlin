        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorBackgroundTwo">@color/colorBackgroundTwo</item>
        <item name="colorText">@color/colorText</item>
        <item name="colorHyperLink">@color/colorHyperLink</item>
        <item name="colorTextBorder">@color/colorBlackTwo</item>
