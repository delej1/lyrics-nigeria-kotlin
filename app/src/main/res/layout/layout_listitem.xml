<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listview_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:elevation="80dp"
    android:orientation="vertical"
    app:cardBackgroundColor="?attr/color9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="?attr/color9">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/music_cover"
            android:layout_width="96dp"
            android:layout_height="96dp"/>

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textStyle="italic"
            android:layout_alignParentEnd="true"
            android:textColor="?attr/colorText"/>

        <TextView
            android:id="@+id/artist"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/music_cover"
            android:paddingTop="16dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/music_cover"
            android:textColor="?attr/colorText"/>

        <TextView
            android:id="@+id/song_title"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/music_cover"
            android:paddingTop="40dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/music_cover"
            android:textColor="?attr/colorText"/>

        <ImageView
            android:id="@+id/favourite_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            app:srcCompat="@mipmap/favorite_grey"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>